<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.control.*?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.TextFlow?>
<BorderPane fx:id="mainBorderPane"
	fx:controller="com.allan.Controller" stylesheets="@MainApp.css"
	xmlns:fx="http://javafx.com/fxml">
	<top>
		<ToolBar>
			<HBox>
				<Button onAction="#showNewItemDialog">
					<tooltip>
						<Tooltip text="Add a New Todo Item" />
					</tooltip>
					<graphic>
						<ImageView>
							<Image url="@/toolbarButtonGraphics/general/New24.gif" />
						</ImageView>
					</graphic>
				</Button>
			</HBox>
		</ToolBar>
	</top>
	<left>
		<VBox>
			<ListView fx:id="sampleListView" minWidth="200"
				maxWidth="200" VBox.vgrow="ALWAYS">
			</ListView>
		</VBox>
	</left>
	<center>
		<VBox style="-fx-background-color: white">
			<GridPane hgap="10" vgap="10" alignment="center">
				<padding>
					<Insets top="5" right="10" bottom="5" left="10"></Insets>
				</padding>
				<Label text="Name:" GridPane.rowIndex="0"
					GridPane.columnIndex="0" />
				<TextField fx:id="nameField" GridPane.rowIndex="0"
					GridPane.columnIndex="1" />
				<Label text="Browser Type" GridPane.rowIndex="1"
					GridPane.columnIndex="0" />
				<HBox GridPane.rowIndex="1" GridPane.columnIndex="1">
					<fx:define>
						<ToggleGroup fx:id="browserTypeGroup" />
					</fx:define>
					<RadioButton text="chrome" userData="chrome"
						fx:id="chromeRadioButton" selected="true"
						toggleGroup="$browserTypeGroup">
						<HBox.margin>
							<Insets right="3.0" />
						</HBox.margin>
					</RadioButton>
					<RadioButton text="ie" userData="ie"
						fx:id="ieRadioButton" toggleGroup="$browserTypeGroup">
						<HBox.margin>
							<Insets right="3.0" />
						</HBox.margin>
					</RadioButton>
				</HBox>
				<Label text="Is Open Browser:" GridPane.rowIndex="2"
					GridPane.columnIndex="0" />
				<HBox GridPane.rowIndex="2" GridPane.columnIndex="1">
					<fx:define>
						<ToggleGroup fx:id="isOpenBrowserGroup" />
					</fx:define>
					<RadioButton text="yes" userData="yes"
						fx:id="yesRadioButton" selected="true"
						toggleGroup="$isOpenBrowserGroup">
						<HBox.margin>
							<Insets right="3.0" />
						</HBox.margin>
					</RadioButton>
					<RadioButton text="no" userData="no"
						fx:id="noRadionButton" toggleGroup="$isOpenBrowserGroup">
						<HBox.margin>
							<Insets right="3.0" />
						</HBox.margin>
					</RadioButton>
				</HBox>


				<Label text="GOCS" GridPane.rowIndex="3"
					GridPane.columnIndex="0" />
				<TextArea fx:id="gocsArea" GridPane.rowIndex="3"
					GridPane.columnIndex="1" WrapText="true" />
				<Label text="Email Template" GridPane.rowIndex="4"
					GridPane.columnIndex="0" />
				<ChoiceBox GridPane.rowIndex="4" GridPane.columnIndex="1"
					fx:id="templateChoiceBox" />
				<Label text="Ignores" GridPane.rowIndex="5"
					GridPane.columnIndex="0" />
				<TextField fx:id="ignoresField" GridPane.rowIndex="5"
					GridPane.columnIndex="1" />

				<Button onAction="#run" GridPane.rowIndex="7"
					GridPane.columnIndex="0">Run</Button>
			</GridPane>
			<TextFlow fx:id="consoleTextFlow" VBox.vgrow="ALWAYS" style="-fx-border-color: ADD8E6;">
			</TextFlow>
		</VBox>
	</center>
</BorderPane>
	
