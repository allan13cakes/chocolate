<?import javafx.scene.control.DialogPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.geometry.Insets?>

<DialogPane fx:controller="com.allan.DialogController"
	xmlns:fx="http://javafx.com/fxml">
	<headerText>
		We could put instructions here
	</headerText>
	<content>
		<GridPane vgap="10" hgap="10">
			<Label text="Name:" GridPane.rowIndex="0"
				GridPane.columnIndex="0" />
			<TextField fx:id="nameField" GridPane.rowIndex="0"
				GridPane.columnIndex="1" />
			<Label text="Browser Type" GridPane.rowIndex="1"
				GridPane.columnIndex="0" />
			<HBox GridPane.rowIndex="1" GridPane.columnIndex="1">
				<fx:define>
					<ToggleGroup fx:id="browserTypeGroup" />
				</fx:define>
				<RadioButton text="chrome" userData="chrome"
					fx:id="chromeRadioButton" selected="true"
					toggleGroup="$browserTypeGroup">
					<HBox.margin>
						<Insets right="3.0" />
					</HBox.margin>
				</RadioButton>
				<RadioButton text="ie" userData="ie"
					fx:id="ieRadioButton" toggleGroup="$browserTypeGroup">
					<HBox.margin>
						<Insets right="3.0" />
					</HBox.margin>
				</RadioButton>
			</HBox>
			<Label text="Is Open Browser:" GridPane.rowIndex="2"
				GridPane.columnIndex="0" />
			<HBox GridPane.rowIndex="2" GridPane.columnIndex="1">
				<fx:define>
					<ToggleGroup fx:id="isOpenBrowserGroup" />
				</fx:define>
				<RadioButton text="yes" userData="yes"
					fx:id="yesRadioButton" selected="true"
					toggleGroup="$isOpenBrowserGroup">
					<HBox.margin>
						<Insets right="3.0" />
					</HBox.margin>
				</RadioButton>
				<RadioButton text="no" userData="no"
					fx:id="noRadionButton" toggleGroup="$isOpenBrowserGroup">
					<HBox.margin>
						<Insets right="3.0" />
					</HBox.margin>
				</RadioButton>
			</HBox>


			<Label text="GOCS" GridPane.rowIndex="3"
				GridPane.columnIndex="0" />
			<TextArea fx:id="gocsArea" GridPane.rowIndex="3"
				GridPane.columnIndex="1" WrapText="true" />
			<Label text="Email Template" GridPane.rowIndex="4"
				GridPane.columnIndex="0" />
			<ChoiceBox GridPane.rowIndex="4" GridPane.columnIndex="1"
				fx:id="templateChoiceBox" />
			<Label text="Ignores" GridPane.rowIndex="5"
				GridPane.columnIndex="0" />
			<TextField fx:id="ignoresField" GridPane.rowIndex="5"
				GridPane.columnIndex="1" />
		</GridPane>
	</content>
</DialogPane>